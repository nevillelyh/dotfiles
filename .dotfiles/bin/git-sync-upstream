#!/bin/bash

# Sync main branch with upstream

set -euo pipefail

if ! git remote | grep -q "^upstream$"; then
    echo "Remote upstream does not exist"
    exit 1
fi

branch=$(git symbolic-ref refs/remotes/origin/HEAD | sed "s@^refs/remotes/origin/@@")
git fetch upstream
git switch "$branch"
git rebase upstream/"$branch"
git push --force
