#!/bin/bash

# Prune branches deleted on remote

set -euo pipefail

if [[ $# -gt 1 ]]; then
    echo "Usage: $(basename "$0") [REMOTE]"
    exit 1
fi

remote=origin
[[ $# -eq 1 ]] && remote=$1

for branch in $(git remote prune "$remote" | grep '\[pruned\]' | awk '{print $3}' | sed -e "s@^$remote/@@g"); do
    if git branch --format="%(refname:short)" | grep -q "^$branch$"; then
        git branch -D "$branch"
    fi
done
