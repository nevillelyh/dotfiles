#!/bin/bash

# Prune branches deleted on remote

set -euo pipefail

if [[ $# -gt 1 ]]; then
    echo "Usage: $(basename "$0") [REMOTE]"
    exit 1
fi

remote=origin
if [[ $# -eq 1 ]]; then
    remote=$1
fi

for b in $(git remote prune "$remote" | grep '\[pruned\]' | awk '{print $3}' | sed -e "s/^$remote\///g"); do
    echo git branch -D "$b"
    git branch -D "$b"
done
