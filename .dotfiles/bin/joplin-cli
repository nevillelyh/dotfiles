#!/bin/bash

# Launch joplin-cli
# See Docker files in .dotfiles/builds/joplin-cli

set -euo pipefail

if ! type docker &> /dev/null; then
    echo "Docker not installed"
    exit 1
fi

image=nevillelyh/joplin-cli

file=$HOME/.cache/joplin-cli-update
(( ttl = 7 * 24 * 60 * 60 ))
(( age = ttl + 1 ))
[[ -f "$file" ]] && age=$(echo "$(date "+%s")" - "$(date -r "$file" "+%s")" | bc -l)
if [[ $age -ge $ttl ]]; then
    docker pull -q "$image:latest" > /dev/null
    touch "$file"
fi

mkdir -p "$HOME/.cache/joplin-cli"
cmd="docker run -it -v $HOME/.cache/joplin-cli:/home/joplin/.config/joplin --rm $image:latest"
if tty &> /dev/null; then
    $cmd
else
    alacritty -e "$cmd"
fi
