#!/bin/bash

# Pull and prune branches

set -euo pipefail

if [[ $# -gt 1 ]]; then
    echo "Usage: $(basename "$0") [REMOTE]"
    exit 1
fi

remote=origin
[[ $# -eq 1 ]] && remote=$1

git pull "$remote"

git remote prune "$remote" | grep '\[pruned\]' | awk '{print $3}' | sed -e "s@^$remote/@@g" | while IFS= read -r branch; do
    if git branch --format="%(refname:short)" | grep -q "^$branch$"; then
        git branch -D "$branch"
    fi
done
